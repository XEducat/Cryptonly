<Window x:Class="Cryptonly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cryptonly"
        mc:Ignorable="d"
        Height="800" Width="1000">

    <Grid>
        <DockPanel LastChildFill="True">
            <!-- Навигационная панель -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#ECEFF1" Height="60">
                <!-- Кнопка Cryptonly -->
                <Button Content="Cryptonly" Click="CryptonlyButton_Click" Style="{StaticResource NavButton}"/>
            </StackPanel>

            <!-- Основное содержимое -->
            <Grid Background="#FFFFFF">
                <!-- Frame для отображения страниц -->
                <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" />
            </Grid>
        </DockPanel>
    </Grid>
</Window>
