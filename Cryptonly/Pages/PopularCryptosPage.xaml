<Page x:Class="Cryptonly.PopularCryptosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Cryptonly"
      Title="PopularCryptosPage">


    <Grid>
        <ListView x:Name="cryptoListView" MouseDoubleClick="CryptoListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Назва" DisplayMemberBinding="{Binding DisplayName}" Width="200"/>
                    <GridViewColumn Header="Ціна" DisplayMemberBinding="{Binding PriceUsd, Converter={StaticResource CurrencyConverter}, ConverterParameter='$'}" Width="100"/>
                    <GridViewColumn Header="Об'єм торгів за 24 год." DisplayMemberBinding="{Binding VolumeUsd, Converter={StaticResource CurrencyConverter}, ConverterParameter='$'}" Width="155"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
