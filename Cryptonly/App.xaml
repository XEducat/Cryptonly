<Application x:Class="Cryptonly.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Cryptonly"
             StartupUri="_Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Злиття словника ресурсів -->
            <ResourceDictionary.MergedDictionaries>
                <!-- Підключення ресурсного словника за замовченням -->
                <ResourceDictionary Source="Resources/Localization/Strings.uk-UA.xaml"/>
                <ResourceDictionary Source="Resources/Themes/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
